<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClassroomAnnouncement"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Launcher Activity -->
        <activity
            android:name=".LoginPage"
            android:exported="true"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Core Pages -->
        <activity
            android:name=".AdminLandingPage"
            android:exported="false"
            android:parentActivityName=".LoginPage" />

        <activity
            android:name=".AdminViewAnnouncementPage"
            android:exported="false"
            android:parentActivityName=".AdminLandingPage" />

        <activity
            android:name=".ViewAnnouncementActivity"
            android:exported="false"
            android:parentActivityName=".LandingPage" />

        <activity
            android:name=".CreateAnnouncementPage"
            android:exported="false"
            android:parentActivityName=".AdminLandingPage" />

        <activity
            android:name=".SignupPage"
            android:exported="false"
            android:parentActivityName=".LoginPage" />

        <activity
            android:name=".LandingPage"
            android:exported="false"
            android:parentActivityName=".LoginPage" />

        <!-- Admin Activities -->
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:label="Admin Dashboard"
            android:parentActivityName=".AdminLandingPage" />

        <activity
            android:name=".ManageUsersActivity"
            android:exported="false"
            android:label="Manage Users"
            android:parentActivityName=".AdminDashboardActivity" />

        <activity
            android:name=".SystemSettingsActivity"
            android:exported="false"
            android:label="System Settings"
            android:parentActivityName=".AdminDashboardActivity" />

        <activity
            android:name=".AnalyticsActivity"
            android:exported="false"
            android:label="Analytics"
            android:parentActivityName=".AdminDashboardActivity" />

        <!-- Product Management Activities -->
        <activity
            android:name=".AdminProductListActivity"
            android:exported="false"
            android:label="Product Management"
            android:parentActivityName=".AdminDashboardActivity" />

        <activity
            android:name=".AddEditProductActivity"
            android:exported="false"
            android:label="@string/title_activity_add_edit_product"
            android:parentActivityName=".AdminProductListActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" />

        <activity
            android:name=".AdminProductDetailActivity"
            android:exported="false"
            android:label="Product Details"
            android:parentActivityName=".AdminProductListActivity" />

        <activity
            android:name=".UserDashboardActivity"
            android:label="User Dashboard"
            android:exported="false" />

        <activity
            android:name=".ChatActivity"
            android:exported="false" />

        <activity
            android:name=".EditProfileActivity"
            android:exported="false" />

        <activity
            android:name=".ProductListActivity"
            android:exported="false" />

        <activity
            android:name=".ProductDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ViewUsersActivity"
            android:exported="false" />
    </application>

</manifest>